<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

  <changeSet id="v1.0.0_02_add_product_table" author="Andrey Gurinov">
    <createSequence sequenceName="product_id_sequence" schemaName="data"/>
    <createTable tableName="product" schemaName="data">
      <column name="id" type="bigint">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(255)"/>
      <column name="measure_unit" type="varchar(50)"/>
    </createTable>
    <addDefaultValue tableName="product" schemaName="data" columnName="id" defaultValueSequenceNext="product_id_sequence"/>
  </changeSet>

</databaseChangeLog>