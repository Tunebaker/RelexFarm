<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

  <changeSet id="v1.0.0_05_add_daily_norm_table" author="Andrey Gurinov" >
    <createSequence sequenceName="daily_norm_id_sequence" schemaName="data"/>
    <createTable tableName="daily_norm" schemaName="data">
      <column name="id" type="bigint">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="product_id" type="bigint"/>
      <column name="user_id" type="bigint"/>
      <column name="norm" type="float"/>
    </createTable>
    <addDefaultValue tableName="worker_rating" schemaName="data" columnName="id" defaultValueSequenceNext="worker_rating_id_sequence"/>
  </changeSet>

</databaseChangeLog>