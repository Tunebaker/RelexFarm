<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

  <changeSet id="v1.0.0_06_add_role_table" author="Andrey Gurinov">
    <createSequence sequenceName="role_id_sequence" schemaName="data"/>
    <createTable tableName="role" schemaName="data">
      <column name="id" type="int">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(20)"/>
    </createTable>
    <addDefaultValue tableName="role" schemaName="data" columnName="id" defaultValueSequenceNext="role_id_sequence"/>
  </changeSet>

</databaseChangeLog>